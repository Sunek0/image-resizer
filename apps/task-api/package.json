{
  "name": "image-resize-api",
  "version": "0.1.0",
  "description": "Image resize Node API",
  "author": "Daniel Barreiro Fuentes",
  "license": "ISC",
  "private": true,
  "scripts": {
    "lint": "tslint --config tslint.json 'apps/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules src/index.ts",
    "start": "NODE_ENV=production node app/index",
    "test": "jest",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:unit": "NODE_ENV=test jest",
    "build": "npm run build:clean && npm run build:tsc",
    "build:tsc": "tsc",
    "build:tsc:prod": "tsc -p tsconfig.prod.json",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.367.0",
    "@aws-sdk/lib-dynamodb": "^3.365.0",
    "@aws-sdk/lib-storage": "3.367.0",
    "@hexlabs/dynamo-ts": "^4.0.148",
    "axios": "^1.4.0",
    "cross-env": "^7.0.3",
    "express": "4.18.2",
    "express-pino-logger": "^7.0.0",
    "express-request-id": "^3.0.0",
    "http-errors": "2.0.0",
    "http-status-codes": "2.2.0",
    "image-size-stream": "^1.1.0",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "sharp": "0.32.1",
    "typedi": "0.10.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/express-pino-logger": "^4.0.3",
    "@types/http-errors": "2.0.1",
    "@types/jest": "^29.5.2",
    "@types/node": "20.4.1",
    "@types/uuid": "9.0.2",
    "jest": "^29.6.1",
    "jest-extended": "^4.0.0",
    "jest-mock-extended": "^3.0.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "2.0.0"
  }
}
