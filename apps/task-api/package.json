{
  "name": "image-resize-api",
  "version": "0.1.0",
  "description": "Image resize Node API",
  "author": "Daniel Barreiro Fuentes",
  "license": "ISC",
  "private": true,
  "scripts": {
    "lint": "tslint --config tslint.json 'src/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "dev": "cross-env NODE_ENV=dev ts-node-dev --ignore-watch node_modules src/index.ts",
    "start": "cross-env NODE_ENV=production node app/index",
    "test": "jest",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:unit": "cross-env NODE_ENV=test jest",
    "build": "npm run build:clean && npm run build:tsc",
    "build:tsc": "tsc",
    "build:tsc:prod": "tsc -p tsconfig.prod.json",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.370.0",
    "@aws-sdk/lib-dynamodb": "3.370.0",
    "@aws-sdk/lib-storage": "3.370.0",
    "@hexlabs/dynamo-ts": "4.0.148",
    "axios": "1.4.0",
    "common-errors": "^1.2.0",
    "config": "3.3.9",
    "cross-env": "7.0.3",
    "express": "4.18.2",
    "image-size-stream": "1.1.0",
    "js-yaml": "4.1.0",
    "pino": "8.14.1",
    "pino-http": "8.3.3",
    "reflect-metadata": "0.1.13",
    "sharp": "0.32.3",
    "typedi": "0.10.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.3",
    "@types/node": "20.4.2",
    "@types/uuid": "9.0.2",
    "jest": "29.6.1",
    "jest-extended": "4.0.0",
    "jest-mock-extended": "3.0.4",
    "ts-jest": "29.1.1",
    "ts-node-dev": "2.0.0",
    "tslint": "6.1.3"
  }
}
